{
    "name": "otis/php-interfaces",
    "description": "Interfaces for OOP php projects",
    "license": "MIT",
    "authors": [
        {
            "name": "Vladimir ROmanichev",
            "email": "pro100print@yahoo.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Otis22\\PhpInterfaces\\": "src"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^0.12.19",
        "sensiolabs/security-checker": "^6.0",
        "wapmorgan/php-code-fixer": "^2.0",
        "php-coveralls/php-coveralls": "^2.2"
    },
    "scripts": {
        "static": [
            "vendor/bin/phpcs --ignore-annotations --standard=PSR12 src && vendor/bin/phpcf src && vendor/bin/phpstan analyse --level=max src"
        ],
        "check-composer": [
            "composer validate && vendor/bin/security-checker security:check"
        ],
        "all-tests": [
            "composer check-composer && composer static"
        ]
    }
}
